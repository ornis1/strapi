{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "slug": {
      "type": "uid",
      "required": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "meta.seo"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "coverImage": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "oldPrice": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "categories": {
      "collection": "category",
      "via": "products",
      "dominant": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "qty": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "shortDescription": {
      "type": "richtext",
      "default": "Краткое описание",
      "required": true
    }
  }
}
